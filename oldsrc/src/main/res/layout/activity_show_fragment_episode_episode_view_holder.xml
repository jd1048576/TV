<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/episodeFragmentEpisodeViewHolderCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/episodeFragmentEpisodeViewHolderEpisodeNumberTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0"
            style="@style/BodyTextDefault" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/episodeFragmentEpisodeViewHolderEpisodeNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toEndOf="@+id/episodeFragmentEpisodeViewHolderEpisodeNumberTextView"
            app:layout_constraintTop_toTopOf="0"
            style="@style/SubheadingTextDefault" />

        <View
            android:id="@+id/divider"
            android:background="?android:attr/colorForeground"
            android:layout_width="1dp"
            android:layout_height="56dp"
            android:alpha="0.12"
            android:layout_marginEnd="56dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <ImageView
            android:id="@+id/episodeFragmentEpisodeViewHolderCheckImageView"
            android:padding="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_check"
            android:tint="@color/icon_state_list"
            android:contentDescription="@string/check"
            android:tintMode="src_in"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="0" />

        <TextView
            android:gravity="center"
            android:id="@+id/episodeFragmentEpisodeViewHolderDaysTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="0"
            style="@style/BodyTextDefault" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.card.MaterialCardView>
